<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.project.Scoredetails">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/firstbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstbox"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/world1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS title"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondbox"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/world2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="League"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textFontWeight="bold"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thirdbox"
            android:layout_below="@+id/secondbox"
            android:layout_marginTop="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/elfsborg" />

                <TextView
                    android:id="@+id/world6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lag ett po채ng"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/world3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lag ett"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/norrkoping" />

                <TextView
                    android:id="@+id/world7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lagtv책 po채ng"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textFontWeight="bold"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/world4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lag tv책"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thirdbox"
            android:layout_marginTop="75dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="Location"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/world5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
